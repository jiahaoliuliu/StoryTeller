<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/drawer_vertical_margin"
    android:paddingLeft="@dimen/drawer_horizontal_margin"
    android:paddingRight="@dimen/drawer_horizontal_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".maincontent.RightFragment">

    <ImageView
        android:id="@+id/user_profile_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_marginBottom="@dimen/element_vertical_margin"
        />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_vertical_margin"
        />

</LinearLayout>
